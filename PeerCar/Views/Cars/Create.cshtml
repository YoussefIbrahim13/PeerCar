@using CarRentalMVC.Models
@model CarRentalMVC.Models.Car

@{
    ViewData["Title"] = "Add New Car";
}

<!-- Hero Section with Background -->
<div class="hero-section position-relative mb-5">
    <div class="hero-overlay"></div>
    <div class="container position-relative py-5">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto text-center text-white">
                <h1 class="display-3 fw-bold mb-4 animate__animated animate__fadeInDown">Add Your Car</h1>
                <p class="lead fs-4 mb-4 animate__animated animate__fadeInUp">Share your vehicle with the community</p>
            </div>
        </div>
    </div>
</div>

<!-- Form Section -->
<div class="container mb-5">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-4">
                    <h4 class="card-title fw-bold mb-4">Car Information</h4>
                    
                    <form asp-action="Create" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>
                        
                        <div class="row g-4">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Brand" class="form-label fw-semibold">Brand</label>
                                    <input asp-for="Brand" class="form-control" placeholder="Enter car brand" />
                                    <span asp-validation-for="Brand" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Model" class="form-label fw-semibold">Model</label>
                                    <input asp-for="Model" class="form-control" placeholder="Enter car model" />
                                    <span asp-validation-for="Model" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="PricePerDay" class="form-label fw-semibold">Price Per Day ($)</label>
                                    <input asp-for="PricePerDay" class="form-control" placeholder="Enter daily rental price" />
                                    <span asp-validation-for="PricePerDay" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="ImageFile" class="form-label fw-semibold">Car Image</label>
                                    <input asp-for="ImageFile" type="file" class="form-control" />
                                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                                    <div class="form-text">Upload a clear image of your car (recommended size: 800x600px)</div>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="AvailabilityStatus" class="form-label fw-semibold">Availability Status</label>
                                    <select asp-for="AvailabilityStatus" class="form-select">
                                        <option value="">Select availability status</option>
                                        @foreach (var status in (ViewData["AvailabilityStatuses"] as List<Car.CarAvailabilityStatus>) ?? new List<Car.CarAvailabilityStatus>())
                                        {
                                            <option value="@status">@status</option>
                                        }
                                    </select>
                                    <span asp-validation-for="AvailabilityStatus" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <button type="submit" class="btn btn-primary px-4">
                                <i class="bi bi-save me-2"></i>Save
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-2"></i>Back to List
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            console.log("Create car page loaded successfully");
        });
    </script>
}
