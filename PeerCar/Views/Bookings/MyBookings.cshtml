@model IEnumerable<CarRentalMVC.Models.Booking>

@{
    ViewData["Title"] = "حجوزات المستخدم";
}

<h2>@ViewData["Title"]</h2>

<table class="table">
    <thead>
        <tr>
            <th>رقم الحجز</th>
            <th>السيارة</th>
            <th>تاريخ البداية</th>
            <th>تاريخ النهاية</th>
            <th>السعر الكلي</th>
            <th>الحالة</th>
            <th>الإجراءات</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var booking in Model)
        {
            <tr>
                <td>@booking.Id</td>
                <td>@booking.Car.Brand</td>
                <td>@booking.StartDate.ToString("d")</td>
                <td>@booking.EndDate.ToString("d")</td>
                <td>@booking.TotalPrice</td>
                <td>@booking.Status</td>
                <td>
                    @if (booking.Status == CarRentalMVC.Models.BookingStatus.Pending)
                    {
                        <form method="post" action="/Bookings/CancelBooking">
                            <input type="hidden" name="bookingId" value="@booking.Id" />
                            <button type="submit" class="btn btn-danger">إلغاء الحجز</button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
