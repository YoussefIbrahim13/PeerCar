@{
    ViewData["Title"] = "Resend Confirmation Email";
}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <h4 class="card-title mb-3 text-center">Resend Confirmation Email</h4>
                    <form asp-action="ResendEmailConfirmation" method="post" class="mb-3">
                        <div class="mb-3">
                            <label for="email" class="form-label">Email address</label>
                            <input type="email" class="form-control" id="email" name="email" placeholder="example@gmail.com" required />
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Resend Email</button>
                    </form>
                    <div class="text-center mt-2">
                        <a href="/Account/Login" class="text-decoration-underline">Back to Login</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
