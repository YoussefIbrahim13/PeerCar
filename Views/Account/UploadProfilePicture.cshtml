@{
    ViewData["Title"] = "Upload Profile Picture";
}
<h2 class="mb-4">Upload Profile Picture</h2>
<form asp-action="UploadProfilePicture" method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label for="profileImage" class="form-label">Choose a profile image</label>
        <input type="file" class="form-control" id="profileImage" name="profileImage" accept="image/*" required />
        @if (ViewBag.UploadError != null)
        {
            <span class="text-danger">@ViewBag.UploadError</span>
        }
    </div>
    <button type="submit" class="btn btn-primary">Upload</button>
</form>
